{% extends 'base.html.twig' %}

{% block title %}
    {% if editMode %}
        Modifier
    {% else %}
        Ajouter
    {% endif %}
        un(e) employé(e)
{% endblock %}

{% block body %}
<h1 class="text-center my-4">
{% if editMode %}
    Modifier
{% else %}
    Ajouter
{% endif %}
un(e) employé(e)</h1>

<section class="container">
{{ form_start(form, {
    attr: { novalidate: 'novalidate'}
}) }}
<div class="row">
    <div class="col-6">
        {{ form_row(form.prenom, { 'label': 'Prénom' })}}
    </div>
    <div class="col-6">
        {{ form_row(form.nom)}}
    </div>
    <div class="col-3">
    {{ form_row(form.telephone, { 'label': 'Numéro de téléphone' })}}
    </div>
    <div class="col-3">
    {{ form_row(form.email)}}
    </div>
    <div class="col-6">
    {{ form_row(form.adresse)}}
    </div>
    <div class="col-4">
    {{ form_row(form.poste)}}
    </div>
    <div class="col-2">
    {{ form_row(form.salaire)}}
    </div>
    <div class="col-2">
    {{ form_row(form.datedenaissance, { 'label': 'Date de naissance' })}}
    </div>
</div>
    <button class="btn btn-primary">Envoyer</button>
{{ form_end(form) }}
</section>


{% endblock %}
