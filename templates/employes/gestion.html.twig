{% extends 'base.html.twig' %}

{% block title %}Gestion des employés{% endblock %}

{% block body %}

<h1 class="text-center my-4">Gestion des employé(e)s</h1>
<section class="container">
<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Prénom</th>
      <th scope="col">Nom</th>
      <th scope="col">Téléphone</th>
      <th scope="col">Email</th>
      <th scope="col">Adresse</th>
      <th scope="col">Poste</th>
      <th scope="col">Salaire</th>
      <th scope="col">Date de naissance</th>
      <th scope="col">Option</th>
    </tr>
  </thead>
  <tfoot>    
  <tr>
      <th scope="col">id</th>
      <th scope="col">Prénom</th>
      <th scope="col">Nom</th>
      <th scope="col">Téléphone</th>
      <th scope="col">Email</th>
      <th scope="col">Adresse</th>
      <th scope="col">Poste</th>
      <th scope="col">Salaire</th>
      <th scope="col">Date de naissance</th>
      <th scope="col">Option</th>
    </tr> 
  </tfoot>
  <tbody>
  {% for employe in employes %}
  <tr>
  <td>{{ employe.id }}</td>
  <td>{{ employe.prenom }}</td>
  <td>{{ employe.nom }}</td>
  <td>{{ employe.telephone }}</td>
  <td>{{ employe.email }}</td>
  <td>{{ employe.adresse }}</td>
  <td>{{ employe.poste }}</td>
  <td>{{ employe.salaire }} € / par mois</td>
  <td>{{ employe.datedenaissance|date('d/m/Y') }}</td>
    <td>
        <a href="{{ path('employe', {id: employe.id}) }}" class="text-info me-3"><i class="bi bi-eye-fill"></i></a>
        <a href="{{ path('modifier', {id: employe.id}) }}" class="text-warning me-3"><i class="bi bi-pencil-square"></i></a>
        <a href="{{ path('supprimer', {id: employe.id}) }}" class="text-danger me-3"><i class="bi bi-trash3-fill"></i></a>
    </td> 
  </tr>   
  {% endfor %}
  </tbody>
</table>
</section>




{% endblock %}
